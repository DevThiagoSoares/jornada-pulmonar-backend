generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String    @id @unique
  name      String
  email     String    @unique
  password  String
  role      String // "Professor" or "Student"
  modules   Modules[]
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Modules {
  id        String      @id @unique
  title     String
  user      Users       @relation(fields: [userId], references: [id])
  userId    String
  questions Questions[]
  createdAt DateTime    @default(now())
  updatedAt DateTime?
}

model Questions {
  id           String      @id @unique
  title        String
  alternatives Options[]
  module       Modules     @relation(fields: [moduleId], references: [id])
  moduleId     String
  Response     Responses[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime?
}

model Options {
  id         String      @id @unique
  content    String
  correct    Boolean
  question   Questions   @relation(fields: [questionId], references: [id])
  questionId String
  Response   Responses[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime?
}

model Responses {
  id         String    @id @unique
  choice     Options   @relation(fields: [choiceId], references: [id])
  choiceId   String
  question   Questions @relation(fields: [questionId], references: [id])
  questionId String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
}
